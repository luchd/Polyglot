{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@client/*": [
        "src/client/*"
      ],
      "@server/*": [
        "src/server/*"
      ]
    }
  },
  "include": [
    "src/client",
    "src/server"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}